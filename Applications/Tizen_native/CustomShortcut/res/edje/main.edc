#define PART_BUTTON(button_name, label, x1, y1, x2, y2) \
  part { \
    name: button_name"/bg"; \
    type: RECT; \
    description { \
      state: "default" 0.0; \
      rel1.relative: x1 y1; \
      rel2.relative: x2 y2; \
      color: 255 255 0 255; \
      visible: 1; \
    } \
    description { \
      state: "focused" 0.0; \
      inherit: "default"; \
      color: 255 255 0 120; \
    } \
  } \
  part { \
    name: button_name"/label"; \
    type: TEXT; \
    description { \
      state: "default" 0.0; \
      color: 0 0 0 255; \
      rel1 { \
        relative: 0.3 0.3; \
        to: button_name"/bg"; \
      } \
      rel2 { \
        relative: 0.7 0.7; \
        to: button_name"/bg"; \
      } \
      text { \
        text: label ; \
        size: 24; \
        align: 0.5 0.5; \
      } \
    } \
  }

#define PART_TITLE(title_name, label) \
  part { \
    name: title_name; \
    type: TEXT; \
    description { \
      state: "default" 0.0; \
      color: 255 255 255 255; \
      text { \
        text: label; \
        font: "Tizen:style=regular"; \
        size: 20; \
        align: 0.5 0.1; \
      } \
    } \
  }

#define PROGRAM_BUTTON(target, on_click_sig, on_click_sig_source) \
  program { \
    name: target"/press"; \
    signal: "mouse,down,*"; \
    source: target"/*"; \
    transition: LINEAR 0.5; \
    script { \
      set_state(PART:target"/bg", "focused", 0.0); \
    } \
  } \
  program { \
    name: target"/release"; \
    signal: "mouse,up,*"; \
    source: target"/*"; \
    transition: LINEAR 0.5; \
    script { \
      set_state(PART:target"/bg", "default", 0.0); \
    } \
  } \
  program { \
    name: target"/click"; \
    signal: "mouse,clicked,*"; \
    source: target"/*"; \
    script { \
      emit(on_click_sig, on_click_sig_source); \
    } \
  }

