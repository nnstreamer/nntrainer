{
 "modules": [
    { "name": "Compiler",        "patterns": ["^(src/)?compiler/"],                          "weight": 3 },
    { "name": "Dataset",         "patterns": ["^(src/)?dataset/"],                           "weight": 2 },
    { "name": "Graph",           "patterns": ["^(src/)?graph/"],                             "weight": 3 },
    { "name": "Layers",          "patterns": ["^(src/)?layers?/"],                           "weight": 3 },
    { "name": "Models",          "patterns": ["^(src/)?models?/"],                           "weight": 3 },
    { "name": "OpenCL",          "patterns": ["^(src/)?opencl/", "\\.cl$"],                  "weight": 2 },
    { "name": "Optimizers",      "patterns": ["^(src/)?optimizers?/"],                       "weight": 2 },
    { "name": "Tensor",          "patterns": ["^(src/)?tensor/"],                            "weight": 3 },
    { "name": "CPU Backend","patterns": ["^(src/)?cpu_backend/", "cpu_backend/","backend/(cpu|tensor)/"], "weight": 3 },
    { "name": "Utils",           "patterns": ["^(src/)?utils?/", "include/.+\\.(h|hpp|hh)$"],"weight": 2 },
    { "name": "Tests",           "patterns": ["^(tests?|test)/", "\\.(test\\.|_test\\.)"],   "weight": 1 },
    { "name": "Other Modules",   "patterns": ["^(src/)?other_modules?/"],                    "weight": 2 },
    { "name": "Build/CI",        "patterns": ["^cmake/", "^\\.github/", "^(scripts?|tools?)/","\\.yml$", "\\.yaml$"], "weight": 1 },
    { "name": "Docs",            "patterns": ["^docs?/", "\\.(md|rst)$"],                    "weight": 1 }
  ],
  "fallbackModule": "Misc",
  "riskHints": {
    "include": ["include/**", "public/**", "schema/**"],
    "abiSensitive": ["include/**", "public/**"]
  }
}